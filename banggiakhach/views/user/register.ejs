<html>
    <head>
        <%- include("./../customer/header.ejs", { title: "Đăng ký" }); %>
    </head>
    <body class="container-fluid">
        <div id="app">
            <div v-if="mode=='LOGIN'">
                <login :phone="phone" changestatus="statuslogin"></login>
                <div class="mt-3">
                    <!-- <button @click="mode='REGISTER'" class="btn btn-primary">Đăng ký</button> | 
                    <button @click="mode='REGISTER'; forgot=1;" class="btn btn-warning">Quên mật khẩu</button> -->
                </div>
            </div>
            <div v-if="mode=='REGISTER'">
                <register @changemode="changemode" :forgot="forgot"></register>
            </div>
            <div v-if="mode=='OTP'">
                <otp></otp>
            </div>
        </div>
        <script>
            var app = new Vue({
                el: "#app",
                data: {
                    mode: "LOGIN",
                    phone: "",
                    forgot: 0
                },
                methods: {
                    changemode: function(a, phone){
                        this.mode=a;
                        if(!phone){
                            this.phone = phone;
                        }
                    },
                    statuslogin: function(a){
                        console.log(a);
                    }
                }
            })
        </script>
    </body>
</html>